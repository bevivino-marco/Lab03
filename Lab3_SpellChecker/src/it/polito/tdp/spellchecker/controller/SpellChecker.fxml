<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="463.0" prefWidth="402.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab3-SpellChecker" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="382.0" prefWidth="223.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Choose the linguage :">
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="boxLingua" onAction="#doSelect" prefWidth="150.0" />
               </children>
            </HBox>
            <TextArea fx:id="txtPhrase" prefHeight="200.0" prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="119.0" prefWidth="402.0">
               <children>
                  <Label alignment="BOTTOM_LEFT" text="Wrong words">
                     <HBox.margin>
                        <Insets right="245.0" top="40.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnCheck" contentDisplay="CENTER" mnemonicParsing="false" onAction="#doSpellCheck" text=" Spell Check">
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#0d78e4" />
                     </effect></Button>
               </children>
            </HBox>
            <TextArea fx:id="txtWrongWords" editable="false" prefHeight="200.0" prefWidth="200.0" />
            <HBox alignment="TOP_RIGHT" prefHeight="73.0" prefWidth="402.0">
               <children>
                  <Label fx:id="lblError" prefHeight="17.0" prefWidth="175.0" text="Error" textFill="#f51414" />
                  <Button fx:id="btcClear" mnemonicParsing="false" onAction="#doClearText" text="Clear text">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <Label fx:id="lblPerformance" prefHeight="17.0" prefWidth="160.0" text="Label" BorderPane.alignment="TOP_LEFT" />
   </bottom>
</BorderPane>
